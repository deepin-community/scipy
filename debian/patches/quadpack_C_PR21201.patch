-        iord(k+1) = isucc
-        k = k-1
-   70 continue
-      iord(i) = last
-      go to 90
-   80 iord(k+1) = last
-c
-c           set maxerr and ermax.
-c
-   90 maxerr = iord(nrmax)
-      ermax = elist(maxerr)
-      return
-      end
